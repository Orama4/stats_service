{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "types": ["node", "jest"]
    },
    "ts-node": {
      "transpileOnly": true,
      "files": true,
      "experimentalReplAwait": false
    },
    "include": ["src/**/*", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}